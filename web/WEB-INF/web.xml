        <servlet-name>Logout</servlet-name>
        <servlet-class>com.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorizationFilter</servlet-name>
        <servlet-class>com.AuthorizationFilter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextListener</servlet-name>
        <url-pattern>/servlet-context-listener.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeDashboard</servlet-name>
        <servlet-class>com.EmployeeDashboard</servlet-class>
    </servlet>
